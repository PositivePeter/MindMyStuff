<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :purchase_date %>
    <%= f.input :warranty_expiration %>
    <%= f.input :receipt_image %>
    <%= f.association :user %>
    <%= f.association :product %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
